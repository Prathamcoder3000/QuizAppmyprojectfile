<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".ForgotActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/img"
        tools:context=".ForgotActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/logonew" />

            <EditText
                android:id="@+id/usernamenew"
                android:layout_width="350dp"
                android:layout_height="52dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/name"
                android:fontFamily="@font/adamina"
                android:hint="Enter Your Username"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/passnew"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/lock1"
                android:fontFamily="@font/adamina"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/pass2new"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/lock2"
                android:fontFamily="@font/adamina"
                android:hint="New Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/buttonnew"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/adamina"
                android:text=" Reset Password "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgotidnew"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/adamina"
                android:textStyle="bold"
                android:text="Redirect To Login page "
                android:textColor="@color/black"
                android:textSize="13dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>